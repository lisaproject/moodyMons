<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="@drawable/rounded_diary_middle" >

    <ImageView
        android:id="@+id/weeklyStatistic"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_rectangle_weekly_statistic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Emotion Statistic" />

    <ImageView
        android:id="@+id/weeklyFace"
        android:layout_width="65dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_neutral_face_only"
        android:layout_marginStart="27dp"
        app:layout_constraintStart_toStartOf="@+id/weeklyStatistic"
        app:layout_constraintTop_toTopOf="@+id/weeklyStatistic"
        app:layout_constraintBottom_toBottomOf="@+id/weeklyStatistic"
        app:layout_constraintVertical_bias="0.5"/>
    <ImageView
        android:id="@+id/weeklyWhiteBar"
        android:layout_width="153dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_bar_spinner"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="@+id/weeklyStatistic"
        app:layout_constraintTop_toTopOf="@+id/weeklyStatistic"
        app:layout_constraintBottom_toBottomOf="@+id/weeklyStatistic"
        app:layout_constraintVertical_bias="0.5"/>

    <ImageView
        android:id="@+id/weeklyEmotionBar"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginStart="100dp"
        android:src="@drawable/ic_bar_neutral"
        app:layout_constraintBottom_toBottomOf="@+id/weeklyWhiteBar"
        app:layout_constraintStart_toStartOf="@+id/weeklyStatistic"
        app:layout_constraintTop_toTopOf="@+id/weeklyWhiteBar" />

    <ToggleButton
        android:id="@+id/weeklyButton"
        android:layout_width="23dp"
        android:layout_height="76dp"
        android:background="@drawable/ic_rectangle_weekly_button"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/weeklyStatistic"
        app:layout_constraintEnd_toEndOf="@+id/weeklyStatistic"
        app:layout_constraintTop_toTopOf="@+id/weeklyStatistic"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/weeklyArrow"
        android:layout_width="10dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintTop_toTopOf="@+id/weeklyStatistic"
        app:layout_constraintBottom_toBottomOf="@+id/weeklyStatistic"
        app:layout_constraintStart_toStartOf="@+id/weeklyButton"
        app:layout_constraintEnd_toEndOf="@+id/weeklyButton"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/weeklyCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="13sp"
        android:textColor="@color/dark_gray"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="@+id/weeklyStatistic"
        app:layout_constraintBottom_toBottomOf="@+id/weeklyStatistic"
        app:layout_constraintEnd_toStartOf="@+id/weeklyButton"
        app:layout_constraintVertical_bias="0.5" />

    <ListView
        android:id="@+id/weeklyDiaryList"
        android:layout_width="315dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_diary_weekly"
        android:divider="@null"
        app:layout_constraintStart_toStartOf="@+id/weeklyStatistic"
        app:layout_constraintEnd_toEndOf="@+id/weeklyStatistic"
        app:layout_constraintTop_toBottomOf="@+id/weeklyStatistic"/>


</androidx.constraintlayout.widget.ConstraintLayout>