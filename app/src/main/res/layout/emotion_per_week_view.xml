<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/emotionBackground"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:background="@drawable/ic_rectangle_happy"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/emotionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021/03/08~2021/03/14"
        android:textColor="@color/dark_gray"
        android:textSize="13sp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/emotionBackground"
        app:layout_constraintBottom_toBottomOf="@id/emotionBackground"
        app:layout_constraintStart_toStartOf="@+id/emotionBackground"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/emotionFace"
        android:layout_width="65dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_happy_face_colored"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toTopOf="@id/emotionBackground"
        app:layout_constraintBottom_toBottomOf="@id/emotionBackground"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintEnd_toEndOf="@+id/emotionBackground" />



</androidx.constraintlayout.widget.ConstraintLayout>